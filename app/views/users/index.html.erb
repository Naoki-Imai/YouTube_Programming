<h1>駆け出しエンジニアメンバー</h1>
<p>積み上げ中メンバーリスト</p>
<div class="container">
    <div class="columns is-multiline">
        <% @users.each do |user| %>
            <div class="column is-multiline">
                <div class="card">
                    <div class="card-content">
                        <div class="card-image">
                            <div class="image">
                                <%= link_to user_path(user) do %>
                                    <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class: "image" %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <%= link_to user.username, user_path(user) %>
                        <%= user.profile %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
    
