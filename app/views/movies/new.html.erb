<div class="container">
    <h1>おすすめ動画投稿画面</h1>
    <%= form_for @movie do |f| %>
        <%= f.label :title, "動画タイトル", class: "label" %>
        <%= f.text_field :title, class: "input" %>

        <%= f.label :url,"URL", class: "label" %>
        <%= f.text_field :url, class: "input"  %>

        <%= f.label :comment, "コメント", class: "label" %>
        <%= f.text_field :comment, class: "textarea"  %>

        <%= f.submit "投稿", class: "button is-primary"%>
    <% end %>
</div>