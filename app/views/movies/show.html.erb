<h1><%= @movie.title %></h1>
<%= link_to @movie.url, target: :_blank do %>
    <iframe id="player" type="text/html" width="640" height="390" allowfullscreen: true src="<%= "https://www.youtube.com/embed/#{@movie.url[32..-1]}" %>"  frameborder="0"></iframe>
<% end %>
<p>コメント</p>
<span><% @movie.comment%></span>

<% if @movie.user_id == current_user.id %>
    <%= link_to "編集", edit_movie_path(@movie), class: "button is-primary" %>
    <%= link_to "削除", movie_path, method: :delete, class: "button is-danger"%>
<% end %>

